{
  "name": "front-its",
  "version": "1.0.0",
  "description": "Vue 3 application for ITS Payment Gateway integration",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port $PORT --host 0.0.0.0",
    "server": "node server.js",
    "server:dev": "nodemon server.js",
    "start": "NODE_ENV=production node server.js",
    "dev:full": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "dev:local": "./start.sh",
    "proxy": "node server.js"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "http-proxy-middleware": "^2.0.0",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "vue3",
    "its",
    "payment",
    "gateway",
    "soap",
    "xml"
  ],
